.col-xs-2
  %ul#login
    - if user_signed_in?
      %li.dropdown
        = link_to "#{current_user.username}", user_path(current_user), :class => "dropdown-toggle", :data => {:toggle=>"dropdown"}
        %ul.dropdown-menu
          %li= link_to "My Page", user_path(current_user)     
          %li= link_to "Account Settings", edit_user_registration_path
    - else 
      %li= link_to "Join :)", new_user_registration_path
    %li
      - if user_signed_in?
        = link_to "Log Out", destroy_user_session_path, method: :delete 
      - else 
        = link_to "Log In", new_user_session_path