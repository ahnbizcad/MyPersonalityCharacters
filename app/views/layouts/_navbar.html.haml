%ul#links
  %li#characters-navbar= link_to "Characters", characters_path
  %li#celebrities-navbar= link_to "Celebrities", celebrities_path
  %li#search-navbar
    %form{ role: "search"}
      %input{ type: "text", placeholder: "Find" }

  %li#universes-navbar= link_to "Universes", universes_path
  %li#friends-navbar= link_to "Friends", users_path
  %li#personalities-navbar.dropdown
    = link_to "Personalities", "#", :class => "dropdown-toggle", :data => { :toggle => "dropdown" }
    %ul.dropdown-menu
      %li= link_to "Socionics", socionics_pages_path
  %li#tests-navbar= link_to "Tests", users_path
  %li#tools-navbar= link_to "Tools", users_path
%ul#login
  - if user_signed_in?
    %li.dropdown
      = link_to "#{current_user.username}", user_path(current_user), :class => "dropdown-toggle", :data => { :toggle=>"dropdown" }
      %ul.dropdown-menu
        %li= link_to "My Page", user_path(current_user)     
        %li= link_to "Account Settings", edit_user_registration_path
  - else
    %li= link_to "Join :)", new_user_registration_path
  %li#login-navbar
    - if user_signed_in?
      = link_to "Log Out", destroy_user_session_path, method: :delete 
    - else 
      = link_to "Log In", new_user_session_path