%nav.row
  .affixable.col-xs-12
    %ul
      %li= link_to "Shows", universes_path
      %li= link_to "Characters", characters_path
      %li= link_to "Celebrities", "#"
      %li= link_to "Users", "#"
      %li.dropdown
        = link_to "Socionics", "#", :class => "dropdown-toggle", :data => {:toggle=>"dropdown"}
        %ul.dropdown-menu
          %li= link_to "Learning Tools", "#"
          %li= link_to "Quadra", "#"
          %li= link_to "Information Elements", "#"

    %ul.pull-right
      %li.dropdown
        - if user_signed_in?
          %ul.dropdown-menu
            %li= link_to current_user.username, user_path(current_user), :class => "dropdown-toggle", :data => {:toggle=>"dropdown"}
            %li= link_to "Account Settings", edit_user_registration_path
        - else 
          = link_to "Join", new_user_registration_path

      %li
        - if user_signed_in?
          = link_to "Log Out", destroy_user_session_path, method: :delete 
        - else 
          = link_to "Log In", new_user_session_path